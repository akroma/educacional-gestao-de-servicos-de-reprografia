@using Reprografia.BusinessLogic
@using Reprografia.lib
<!DOCTYPE html>
<html>
<head>
    <title>Solicitação de Serviços Reprográficos | @ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=PT+Sans' rel='stylesheet' type='text/css' />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>
                    Sistema de Solicitação de Serviços Reprográficos</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.MenuLink("Início", "Index", "Solicitacao")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Trocar senha", "ChangePassword", "Account")</li>
                        if (SolicitacaoBL.PodeCriarSolicitacao(User.Identity.Name) == StatusCriacaoSolicitacao.Permitido)
                        {
                        <li>@Html.MenuLink("Nova Solicitação", "Create", "Solicitacao")</li>
                        }
                        if (User.IsInRole("Administrator"))
                        {
                        <li>@Html.MenuLink("Administrar Solicitações", "Admin", "Solicitacao")</li>
                        }
                    }
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
